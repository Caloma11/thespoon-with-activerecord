<h1>Those are all my restaurants:</h1>

<ul>

  <% @restaurants.each do |restaurant| %>
    <!-- restaurant => is a restaurant instance -->
    <!-- /restaurants/8 -->
    <li> <%= link_to restaurant.name, restaurant_path(restaurant.id) %>
      <%= link_to "Edit", edit_restaurant_path(restaurant) %> -
      <%= link_to "Delete", restaurant_path(restaurant), method: :delete, data: { confirm: "Are you sure?"} %>
    </li>
  <% end %>

</ul>

<%= link_to "Create new restaurant", new_restaurant_path %>
